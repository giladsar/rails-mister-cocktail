
<div class="banner-item">
  <h1><%= @cocktail.name %></h1>
</div>





<div class= "container-item">
  <div class="card-trip">
    <%= cl_image_tag( @cocktail.photo, :width => 250, :height => 250, :crop => :fill) %>
    <div class="card-trip-infos">
      <div>
        <h3>Ingredients List:</h3>
        <% @doses.each do|dose| %>
         <p><strong><%= dose.ingredient.name %></strong>
          -<%= dose.description %><%= link_to 'delete', dose_path(dose), method: :delete ,class: "btn btn-flat-delete"%></p>

        <%end %>
        <h3> add ingredients</h3>
        <%= simple_form_for([@cocktail, @dose]) do |f|%>
        <%= f.input :description %>
        </%>
        <%= f.association :ingredient  %>
        <%= f.submit %>
        <% end %>
   <!--      <%= link_to 'add dose', new_cocktail_dose_path(@cocktail), class: "btn btn-flat"  %> -->
      </div>
    </div>
  </div>
</div>

<div class="back">
  <%= link_to 'back', cocktails_path, class: "btn btn-flat" %>
</div>
